<title><%= @keyword %></title>
<h1>Searching for - <%= @keyword %></h1>
<p>Powered By Food2Fork.com</p>

<table border="1">
  <tr>
    <th>Thumbnail</th>
    <th>Title</th>
    <th>Social Rank of the Recipe</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><%= image_tag(recipe["thumbnail"])%></td>
      <td><%= recipe["title"] %></td>
      <td><%= recipe["shortDescription"] %></td>
    </tr>
  <% end %>
</table>
