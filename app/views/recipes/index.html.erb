<title><%= @keyword %></title>
<h1>Searching for - <%= @keyword %></h1>

<table border="1">
  <tr>
    <th>Thumbnail</th>
    <th>Title</th>
    <th>Social Rank of the Recipe</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><a href=<%= recipe["f2f_url"]%>><%= image_tag(recipe["image_url"], size: "100x100")%></a></td>
      <td><%= sanitize recipe["title"] %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>
